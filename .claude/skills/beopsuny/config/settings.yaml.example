# Korean Law API Configuration
# 국가법령정보 공동활용 API 설정

# OC Code (Open API Code)
# open.law.go.kr에서 발급받은 ID (이메일의 @ 앞부분)
# 예: your_email@gmail.com → oc_code: "your_email"
oc_code: "your_email_id"

# 열린국회정보 API Key (국회 의안 조회용, 선택)
# open.assembly.go.kr에서 발급받은 인증키
# assembly_api_key: "your_api_key"

# API Settings
api:
  base_url: "http://www.law.go.kr/DRF"
  timeout: 30
  default_display: 20  # 기본 검색 결과 수

# 검색 대상 코드
targets:
  law: "법령"
  prec: "판례"
  ordin: "자치법규"
  admrul: "행정규칙"
  expc: "법령해석례"
  detc: "헌재결정례"

# 주요 법령 ID (API 검색 실패 시 직접 조회용)
# 법령ID는 국가법령정보센터에서 확인 가능
major_laws:
  # 기본법
  헌법: "001222"
  민법: "001706"
  상법: "001702"
  형법: "001659"
  민사소송법: "001648"
  형사소송법: "001657"

  # IT/디지털
  개인정보보호법: "011357"
  정보통신망법: "000030"
  전자상거래법: "009318"
  전자서명법: "008872"

  # 노동법
  근로기준법: "001129"
  최저임금법: "001145"
  산업안전보건법: "001140"

  # 기업법
  공정거래법: "001132"
  자본시장법: "010929"

  # 행정법
  행정절차법: "001600"
  행정소송법: "001607"
  행정심판법: "001632"
