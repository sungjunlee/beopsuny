# ============================================================
# 법순이 (Beopsuny) 사용자 설정
# User Configuration for Beopsuny
# ============================================================
# 이 파일을 settings.yaml로 복사한 후 API 키를 입력하세요.
# Copy this file to settings.yaml and fill in your API keys.
#
# 또는 환경변수 사용 (Claude Code Web, Codex Cloud 권장):
#   export BEOPSUNY_OC_CODE="your_oc_code"
#   export BEOPSUNY_ASSEMBLY_API_KEY="your_api_key"
# ============================================================

# 국가법령정보 OC 코드 (필수)
# National Law Information Center OC Code (Required)
# 발급: https://open.law.go.kr
# 가입 이메일의 @ 앞부분 (예: user@gmail.com → user)
oc_code: "your_oc_code"

# 열린국회정보 API 키 (선택 - 국회 의안 조회용)
# National Assembly API Key (Optional - for bill tracking)
# 발급: https://open.assembly.go.kr
# assembly_api_key: "your_api_key"

# ============================================================
# 프록시 설정 (해외 접근용)
# Proxy Settings (for overseas access)
# ============================================================
# 한국 정부 API는 해외 IP를 차단합니다.
# Claude Code Web, Codex Web 등 해외 환경에서 사용 시 프록시 설정이 필요합니다.
#
# 환경변수로도 설정 가능:
#   export BEOPSUNY_PROXY_TYPE=cloudflare
#   export BEOPSUNY_PROXY_URL="https://your-worker.workers.dev"
#
# Bright Data 사용 시:
#   export BEOPSUNY_PROXY_TYPE=brightdata
#   export BEOPSUNY_BRIGHTDATA_USERNAME="your-username"
#   export BEOPSUNY_BRIGHTDATA_PASSWORD="your-password"
# ============================================================

# proxy:
#   # 프록시 유형: cloudflare (권장, 무료), brightdata (유료), http
#   type: "cloudflare"
#
#   # Cloudflare Workers URL (type: cloudflare 일 때)
#   # 배포 방법: cloudflare-worker/README.md 참조
#   url: "https://your-worker.your-account.workers.dev"
#
#   # Bright Data 설정 (type: brightdata 일 때)
#   # brightdata:
#   #   username: "your-zone-username"
#   #   password: "your-password"
#
#   # 강제 프록시 사용 (국내에서도 프록시 사용)
#   # force_proxy: false
#
#   # 지역 체크 스킵 (항상 국내로 간주)
#   # skip_geo_check: false
